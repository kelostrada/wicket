<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :external_id, class: "control-label" %>
    <%= text_input f, :external_id, class: "form-control" %>
    <%= error_tag f, :external_id %>
  </div>

  <div class="form-group">
    <%= label f, :address, class: "control-label" %>
    <%= text_input f, :address, class: "form-control" %>
    <%= error_tag f, :address %>
  </div>

  <div class="form-group">
    <%= label f, :txid, class: "control-label" %>
    <%= text_input f, :txid, class: "form-control" %>
    <%= error_tag f, :txid %>
  </div>

  <div class="form-group">
    <%= label f, :amount, class: "control-label" %>
    <%= number_input f, :amount, step: "any", class: "form-control" %>
    <%= error_tag f, :amount %>
  </div>

  <div class="form-group">
    <%= label f, :fee, class: "control-label" %>
    <%= number_input f, :fee, step: "any", class: "form-control" %>
    <%= error_tag f, :fee %>
  </div>

  <div class="form-group">
    <%= label f, :confirmations, class: "control-label" %>
    <%= number_input f, :confirmations, class: "form-control" %>
    <%= error_tag f, :confirmations %>
  </div>

  <div class="form-group">
    <%= label f, :timereceived, class: "control-label" %>
    <%= number_input f, :timereceived, class: "form-control" %>
    <%= error_tag f, :timereceived %>
  </div>

  <div class="form-group">
    <%= label f, :pushed, class: "control-label" %>
    <%= checkbox f, :pushed, class: "form-control" %>
    <%= error_tag f, :pushed %>
  </div>

  <div class="form-group">
    <%= label f, :pushed_conf, class: "control-label" %>
    <%= number_input f, :pushed_conf, class: "form-control" %>
    <%= error_tag f, :pushed_conf %>
  </div>

  <div class="form-group">
    <%= label f, :connector, class: "control-label" %>
    <%= text_input f, :connector, class: "form-control" %>
    <%= error_tag f, :connector %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
